# Environment Variables Template
NODE_ENV=development

# Database
DATA_DIRECTORY=./data

# Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=
# Optional override (defaults to 15m when unset)
# JWT_EXPIRATION=15m

# Server Configuration
PORT=3001

# Rate Limiting (set to true to disable in exceptional cases only)
DISABLE_RATE_LIMIT=false
# Deprecated compatibility flag (do not use in new environments)
# DISABLE_RATE_LIMITING=false

# Internal Security
INTERNAL_API_KEY=
INTERNAL_IPS=127.0.0.1,::1

# Push Notifications (run `npm run generate-vapid` to generate)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=admin@outdoorteam.com

# Build Configuration (for instance.app builds)
BUILD_MODE=false
INSTANCE_APP_BUILD=false

{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "~shared/*": ["shared/*"]
    }
  },
  "include": ["client/src", "scripts"],
  "exclude": ["node_modules", "server", "tests", "**/*.spec.ts", "**/*.test.ts"]
}

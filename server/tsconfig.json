{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "noEmitOnError": true
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["dist", "node_modules", "client", "android", "scripts"]
}
